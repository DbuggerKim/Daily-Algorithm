-- 코드를 입력하세요
SELECT SUBSTR(PRODUCT_CODE, 1, 2) AS CATEGORY, COUNT(PRODUCT_ID) AS PRODUCTS
FROM PRODUCT
GROUP BY CATEGORY
ORDER BY CATEGORY ASC


-- 코드를 입력하세요 OLD
SELECT CASE WHEN PRODUCT_CODE LIKE 'A1%' THEN 'A1'
            WHEN PRODUCT_CODE LIKE 'C3%' THEN 'C3'
            WHEN PRODUCT_CODE LIKE 'K1%' THEN 'K1'
            END PRODUCT_CODE AS CATEGORY, COUNT(*) AS PRODUCTS
FROM PRODUCT
GROUP BY CATEGORY
ORDER BY CATEGORY ASC
