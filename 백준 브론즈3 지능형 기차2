/*
 출처: https://www.acmicpc.net/problem/2460
 제목: 지능형 기차2 (브론즈3)
 */

package sample;

import java.util.*;

public class Main {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int sum=0;
		int max=-1;
		
		for(int i=0; i<10; i++) {
			int out = sc.nextInt();
			int in = sc.nextInt();
			sum-=out;
			sum+=in;
			max=Math.max(max,sum);
			
		}
		
		System.out.println(max);
		
        sc.close();
	}
}
